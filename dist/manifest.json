{
  "manifest_version": 2,
  "name": "Pinboard Neue",
  "version": "0.4.0",
  "description": "Pinboard's best friend for Firefox",
  "icons": {
    "48": "icons/extension.png",
    "96": "icons/extension@2x.png"
  },
  "permissions": ["*://api.pinboard.in/*", "storage", "tabs"],
  "sidebar_action": {
    "default_title": "Pinboard",
    "default_panel": "sidebar/panel.html",
    "default_icon": "icons/sidebar.png",
    "browser_style": true
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/button.png",
      "38": "icons/button@2x.png"
    },
    "default_title": "Add to Pinboard",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "applications": {
    "gecko": {
      "id": "pinboard-sidebar@extremely.online"
    }
  }
}
