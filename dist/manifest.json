{
  "manifest_version": 2,
  "name": "Pinboard Neue",
  "version": "0.4.1",
  "description": "Pinboard's best friend for Firefox",
  "icons": {
    "48": "icons/extension.png",
    "96": "icons/extension@2x.png"
  },
  "permissions": ["*://api.pinboard.in/*", "storage", "tabs"],
  "sidebar_action": {
    "default_title": "Pinboard",
    "default_panel": "sidebar/panel.html",
    "default_icon": {
      "32": "icons/sidebar.svg",
      "64": "icons/sidebar.svg"
    },
    "browser_style": true
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/button.svg",
      "38": "icons/button.svg"
    },
    "default_title": "Add to Pinboard",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "applications": {
    "gecko": {
      "id": "pinboard-sidebar@extremely.online"
    }
  }
}
